<Window x:Class="BMP2.Weather.WeatherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BMP2.Weather"
        mc:Ignorable="d"
        Title="Погодные условия" Height="200" Width="350" WindowStartupLocation="CenterScreen"  ResizeMode="NoResize">
    <Grid>
        <Image x:Name="Icon_Back"  HorizontalAlignment="Left" Height="257" VerticalAlignment="Top" Width="446"
                 Margin="-10,0,0,0"/>

        <Label x:Name="Label_Name" Content="Погодные условия" FontSize="25"  Margin="138,32,4,31" FontFamily="Times New Roman"/>
        <Label x:Name="Label_Temp" Content="0" Margin="138,69,13,36" FontSize="22"  FontFamily="Times New Roman"/>


        <Image x:Name="Icon_Weather" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"
                Source="Icon/Icon_Summer.png" Margin="10,19,0,0"/>

    </Grid>
</Window>
